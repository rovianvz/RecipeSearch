@model IEnumerable<RecipeSearchBootstrap.Models.Recipes>

@{
    ViewBag.Title = "RecipeSearch";
}

<section id="searchForm" class="container">
    <div class="center">
        <h2>Busca de receitas</h2>
    </div>
    @using (Ajax.BeginForm("_GetSearchResults", "Recipes", new AjaxOptions() { UpdateTargetId = "resultsTab" }))
    {
        <div class="input-group">
            @Html.TextBox("searchString", null, new { @class = "form-control", placeholder = "Ex.: presunto, quejo" })
            <div class="input-group-btn">
                <button type="submit" class="btn btn-default" value="perfect" name="Command">O que posso fazer agora?</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                    <li><button type="submit" value="oneMissing" name="Command">Faltando até 1 ingrediente</button></li>
                    <li><button type="submit" value="twoMissing" name="Command">Faltando até 2 ingredientes</button></li>
                    <li><button type="submit" value="threeMissing" name="Command">Faltando até 3 ingredientes</button></li>
                </ul>
            </div>
        </div>
    }
</section>   
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-6">
            Bla
        </div>
        <div id="resultsTab" class="col-md-8 col-sm-6">
            @Html.Partial("_GetSearchResults")
        </div>
    </div>
    
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




